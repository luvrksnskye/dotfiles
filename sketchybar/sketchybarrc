sketchybar --add item music center \
           --set music \
                 icon="$ICON_MUSIC" \
                 icon.font="$NERD_FONT:Bold:18.0" \
                 icon.color="$GREEN" \
                 label="Not Playing" \
                 label.font="$FONT:Medium:12.0" \
                 label.color="$SUBTEXT1" \
                 label.max_chars=45 \
                 background.color="$MEDIA_BG" \
                 background.corner_radius=12 \
                 background.height=30 \
                 scroll_texts=on \
                 update_freq=3 \
                 script="$PLUGIN_DIR/music.sh" \
                 click_script="$PLUGIN_DIR/music_click.sh"

sketchybar --add item music.prev popup.music \
           --set music.prev \
                 icon="$ICON_PREV" \
                 icon.font="$NERD_FONT:Bold:18.0" \
                 icon.color="$SUBTEXT1" \
                 icon.padding_left=15 \
                 icon.padding_right=15 \
                 label.drawing=off \
                 background.drawing=off \
                 click_script="nowplaying-cli previous 2>/dev/null || osascript -e 'tell application \"Spotify\" to previous track' 2>/dev/null"

sketchybar --add item music.play popup.music \
           --set music.play \
                 icon="$ICON_PLAY" \
                 icon.font="$NERD_FONT:Bold:22.0" \
                 icon.color="$PINK" \
                 icon.padding_left=15 \
                 icon.padding_right=15 \
                 label.drawing=off \
                 background.drawing=off \
                 click_script="nowplaying-cli togglePlayPause 2>/dev/null || osascript -e 'tell application \"Spotify\" to playpause' 2>/dev/null"

sketchybar --add item music.next popup.music \
           --set music.next \
                 icon="$ICON_NEXT" \
                 icon.font="$NERD_FONT:Bold:18.0" \
                 icon.color="$SUBTEXT1" \
                 icon.padding_left=15 \
                 icon.padding_right=15 \
                 label.drawing=off \
                 background.drawing=off \
                 click_script="nowplaying-cli next 2>/dev/null || osascript -e 'tell application \"Spotify\" to next track' 2>/dev/null"

sketchybar --subscribe music spotify_change media_change

